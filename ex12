add2(Y, 0+X, Z) :- add2(Y,X,Z).
add2(X+0, Y, Z) :- add2(X,Y,Z).
add2(Y, X+0, Z) :- add2(Y,X,Z).

add2(-s(0)+Y, Z, A) :- add2(p(0)+Y,Z,A).
add2(Z, -s(0)+Y, A) :- add2(Z,p(0)+Y,A).
