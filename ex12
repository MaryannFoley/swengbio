add2(Z, s(X)+Y, p(A)) :- add2(Z,X+Y,p(p(A))).
add2(p(X)+Y, Z, s(A)) :- add2(X+Y,Z,s(s(A))).
add2(Z, p(X)+Y, s(A)) :- add2(Z,X+Y,s(s(A))).


