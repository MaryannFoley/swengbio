add2(0,X,X).



%Exercise 3



minus(s(0),p(0)).
minus(p(0),s(0)).

minus(p(s(X)),Z) :- minus(X,Z).
minus(s(p(X)),Z) :- minus(X,Z).
minus(s(s(X)),p(Z)) :- minus(s(X),Z).
minus(p(p(X)),p(Z)) :- minus(p(X),Z).




%Exercise 4



add2(-p(0),Y,Z) :- add2(s(0),Y,Z).
add2(-s(0),Y,Z) :- add2(p(0),Y,Z).
